    "logging": {
        "log_level": "INFO",
        "log_file": "bot.log",
        "max_log_size": 10485760,
        "backup_count": 5,
        "console_output": true
    },
    "ui": {
        "window_width": 800,
        "window_height": 600,
        "theme": "default",
        "auto_save": true,
        "save_interval": 30
